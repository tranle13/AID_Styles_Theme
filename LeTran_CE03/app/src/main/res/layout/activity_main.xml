<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        style="@style/FrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            style="@style/FrameLayoutImage"
            android:contentDescription="@string/imageview"
            android:src="@drawable/image" />

        <TextView
            android:id="@+id/txt_FrameLayoutText"
            style="@style/BaseFormStyle.FrameLayoutText"
            android:text="@string/defaultText"/>
    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        style="@style/BaseFormStyle"
        android:text="@string/title_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <RadioGroup
        android:id="@+id/rdg_RadioGroup1"
        style="@style/BaseFormStyle.RadioButtonGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/rbn_BackgroundPurple"
            style="@style/RadioButton"
            android:text="@string/radio_title_1" />

        <RadioButton
            android:id="@+id/rbn_BackgroundGreen"
            style="@style/RadioButton"
            android:text="@string/radio_title_2" />

        <RadioButton
            android:id="@+id/rbn_BackgroundBlack"
            style="@style/RadioButton"
            android:text="@string/radio_title_3" />
    </RadioGroup>

    <EditText
        android:id="@+id/txt_ChangeText"
        style="@style/BaseFormStyle.TextChange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rdg_RadioGroup1" />

    <TextView
        android:id="@+id/textView3"
        style="@style/BaseFormStyle"
        android:text="@string/title_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ChangeText" />

    <RadioGroup
        android:id="@+id/rdg_RadioGroup2"
        style="@style/BaseFormStyle.RadioButtonGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/rbn_TextPurple"
            style="@style/RadioButton"
            android:text="@string/radio_title_1" />

        <RadioButton
            android:id="@+id/rbn_TextGreen"
            style="@style/RadioButton"
            android:text="@string/radio_title_2" />

        <RadioButton
            android:id="@+id/rbn_TextBlack"
            style="@style/RadioButton"
            android:text="@string/radio_title_3" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        style="@style/BaseFormStyle"
        android:text="@string/title_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rdg_RadioGroup2" />

    <Switch
        android:id="@+id/swt_Bold"
        style="@style/BaseFormStyle"
        android:layout_marginTop="0dp"
        android:layout_width="100dp"
        android:text="@string/title_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</android.support.constraint.ConstraintLayout>